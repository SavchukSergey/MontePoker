<UserControl x:Class="Poker.Views.PokerCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MouseDown="UserControl_Click"
            >
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVisibilityConverter" />
    </UserControl.Resources>
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="2"
            x:Name="inner" Visibility="{Binding Path=Visible, Converter={StaticResource boolToVisibilityConverter}}" >
        <Border.Style>
            <Style>
                <Setter Property="Border.Background" Value="White" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=Highlighted}" Value="true">
                        <Setter Property="Border.Background" Value="Green" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>           
        </Border.Style>
        <Image x:Name="image" />
    </Border>
</UserControl>
