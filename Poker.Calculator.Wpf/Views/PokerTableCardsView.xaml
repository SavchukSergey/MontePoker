<UserControl x:Class="Poker.Calculator.Wpf.Views.PokerTableCardsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Poker.Calculator.Wpf.Views"
             xmlns:Views="clr-namespace:Poker.Views;assembly=Poker">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Views:PokerCardView DataContext="{Binding Path=CardA}" Grid.Column="0" Margin="2" CardClick="OnCardClick" />
        <Views:PokerCardView DataContext="{Binding Path=CardB}" Grid.Column="1" Margin="2" CardClick="OnCardClick" />
        <Views:PokerCardView DataContext="{Binding Path=CardC}" Grid.Column="2" Margin="2" CardClick="OnCardClick" />
        <Views:PokerCardView DataContext="{Binding Path=CardD}" Grid.Column="3" Margin="2" CardClick="OnCardClick" />
        <Views:PokerCardView DataContext="{Binding Path=CardE}" Grid.Column="4" Margin="2" CardClick="OnCardClick" />
    </Grid>
</UserControl>
